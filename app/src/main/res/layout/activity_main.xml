<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/black"
    tools:context=".MainActivity">


 <!-- should be edit text -->>
    <Button
        android:id="@+id/input_2_text"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginBottom="268dp"
        android:backgroundTint="@color/md_theme_dark_outline"
        android:text="Input 2:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- should be edit text -->>
    <Button
        android:id="@+id/user_input_2"
        android:layout_width="237dp"
        android:layout_height="@dimen/user_input_size"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/md_theme_dark_outline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="237dp"
        android:layout_height="75dp"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:onClick="switchScreens"
        android:text="ENTER"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="input_2_text,user_input_2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="user_input_2,input_2_text" />


</androidx.constraintlayout.widget.ConstraintLayout>